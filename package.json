{
  "name": "targabay",
  "version": "0.1.0",
  "description": "An online vehicle marketplace platform",
  "author": "a.kajendran@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --stream -r dev",
    "dev:webapp": "pnpm --filter=webapp dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r --fix",
    "format": "pnpm -r format && pnpm format-rest",
    "format-rest": "npx prettier --ignore-path .gitignore --write \"**/*.{css,md,json,yml}\" \"!package-lock.json\" --print-width 150 --tab-width 4"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.11.0",
  "lint-staged": {
    "*.{ts,tsx}": "pnpm lint:fix"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.7.2",
    "@connectrpc/connect": "^1.3.0",
    "dotenv": "^16.3.1",
    "next": "14.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.29.0",
    "@bufbuild/protoc-gen-es": "^1.7.2",
    "@connectrpc/protoc-gen-connect-es": "^1.3.0",
    "@nx-go/nx-go": "3.0.0",
    "@nx/eslint": "18.0.4",
    "@nx/next": "18.0.4",
    "@nx/playwright": "18.0.4",
    "@nx/storybook": "18.0.4",
    "@nx/web": "18.0.4",
    "@playwright/test": "^1.36.0",
    "@types/node": "20.1.3",
    "eslint": "~8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nx": "18.0.4",
    "prettier": "^3.0.3",
    "storybook": "7.6.13"
  }
}

